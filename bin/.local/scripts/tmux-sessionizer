#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    SELECTED=$1
else
    SELECTED=$(fd . $PWD $HOME $HOME/personal $HOME/test $HOME/**/*.git/ \
        -E refs -E logs -E worktrees -E branches -E info -E objects -E hooks \
        --max-depth 1 --type directory -a --color=always 2> /dev/null \
        | uniq \
        | sort -r \
        | fzf  --print-query \
        | tail -n 1)
fi

if [[ -z $SELECTED ]]; then
    exit 0
fi

SELECTED_NAME=$(basename "$SELECTED" | tr . _)

IS_TMUX_RUNNING=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $IS_TMUX_RUNNING ]]; then
    tmux new-session -s $SELECTED_NAME -c $SELECTED -n bash
    exit 0
fi

if ! tmux has-session -t=$SELECTED_NAME 2> /dev/null; then
    tmux new-session -ds $SELECTED_NAME -c $SELECTED
fi

tmux switch-client -t $SELECTED_NAME 2> /dev/null

if [[ "$?" -ne 0 ]]; then
    tmux attach-session -t $SELECTED_NAME -c $SELECTED
fi
